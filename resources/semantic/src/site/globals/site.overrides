input[type="range"] {
  width: 100%;
  -webkit-appearance: none;
  border-bottom: 1px solid @pink;
  border-radius: 10px;
  padding: 0;
  height: 0;
  margin-top: 30px;
  margin-bottom: 30px;
  cursor: pointer;
  &:focus {
    outline: none !important;
  }

  &::-moz-range-track {
    background: none;
    border: 0;
  }
  &::-moz-focus-outer {
    border: 0;
  }
  &::-webkit-slider-thumb {
    transition: all 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
    -webkit-appearance: none;
    height: 1.5rem;
    width: 1.5rem;
    background: @pink;
    border-radius: 100%;
  }

  &::-moz-range-thumb {
    height: 1.5rem;
    width: 1.5rem;
    background: @pink;
    border-radius: 100%;
    border: none;
  }
}

.react-datepicker {
  font-family: @pageFont !important;
  border: none !important;
  box-shadow: 2px 4px 4px 2px rgba(0, 0, 0, 0.05);
  .react-datepicker__time-list {
    padding: 0 !important;
  }
  .react-datepicker__time-list-item {
    padding: 4px !important;
  }
  .react-datepicker__header {
    background-color: @brown !important;
  }

  .react-datepicker__day--selected, .react-datepicker__time-list-item--selected {
    background-color: @pink !important;
  }

  .react-datepicker-time__header, .react-datepicker__current-month,
  .react-datepicker__day-name {
    color: #FFF !important;
  }
  .react-datepicker__time-container {
    border-left-color: fade(@lightBrown, 30) !important;
  }
  .react-datepicker__triangle {
    border-bottom-color: @brown !important;
  }
}

.transaction-log-sticky {
  & > * {
    z-index: 9999;
  }
}

.transaction-log {
  position: absolute;
  right: 0;
  z-index: 99;
  width: @transactionLogWidth;
  overflow: hidden;
  background: #FFF;
  color: @textColor;
  display: flex;
  flex-direction: column;
  box-shadow: 0 0 50px 20px rgba(0, 0, 0, 0.04);
  will-change: transform;
  transition: transform 300ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
  transform: scaleY(0);
  transform-origin: top;
  height: @transactionLogHeight;

  &.open {
    transform: scaleY(1);
  }

  .title {
    background: @purple;
    color: fade(@whiteTextColor, 60);
    text-transform: uppercase;
    font-size: 10px;
    text-align: center;
    padding: 10px 0;
    cursor: pointer;
  }
  .settings {
    padding: 10px 25px;
    border-bottom: 1px solid @borderColor;
    .ui.checkbox label {
      font-size: 10px;
    }
  }
  .left-section {
    color: @darkBlueText;
    line-height: 1.5;
    font-size: 12px;
  }
  .transactions {
    overflow-y: scroll;
    flex-grow: 1;
    width: @transactionLogWidth + 10px;
    .transaction {
      margin: 10px 17px;
      padding-bottom: 10px;
      cursor: pointer;
      &:not(:last-child) {
        border-bottom: 1px solid @borderColor;
      }
      .transaction-name {
        line-height: 1.6;
        width: 100%;
        text-overflow: ellipsis;
        white-space: nowrap;
        overflow: hidden;
      }
      .transaction-content {
        display: flex;
        .left-section {
          flex-grow: 1;
        }
        .right-section {
          width: 60px;
          text-align: center;
          align-self: center;
        }
        .transaction-status {
          text-transform: uppercase;
          font-size: 10px;
          font-weight: bold;
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: space-between;
          height: 45px;
          i.icon {
            width: 20px;
            height: 20px;
            line-height: 20px;
            border-radius: 100%;
            color: #FFF;
          }
          &.success {
            color: @transactionSuccessColor;
            i.icon {
              background-color: @transactionSuccessColor;
              font-size: 8px;
              &:before {
                content: @check;
              }
            }
          }
          &.failure {
            color: @transactionFailureColor;
            i.icon {
              background-color: @transactionFailureColor;
              font-size: 7px;
              &:before {
                content: @times;
              }
            }
          }
          &.pending, &.not-loaded {
            color: @transactionPendingColor;
            i.icon {
              background-color: @transactionPendingColor;
              font-size: 10px;
              &:before {
                content: @clock2;
              }
            }
          }
        }
      }
    }
  }
  .no-transactions {
    display: flex;
    flex-grow: 1;
    align-items: center;
    justify-content: center;
    font-size: 12px;
    color: @grey;
  }
}

.snackbar {
  position: fixed;
  background-color: @brownBackground;
  bottom: 0;
  right: 30px;
  color: @whiteTextColor;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 10px 20px;
  background-size: 100% auto;
  transition: transform 450ms cubic-bezier(0.23, 1, 0.32, 1) 0ms;
  will-change: transform;
  overflow: hidden;
  transform: scaleY(0);
  transform-origin: bottom;
  min-width: 300px;
  min-height: 48px;

  &.open {
    transform: scaleY(1);
  }
  & > * {
    opacity: 0;
    will-change: opacity;
    transition: opacity 500ms cubic-bezier(0.23, 1, 0.32, 1) 100ms;
  }
  &.open > * {
    opacity: 1;
  }
  @media only screen and (max-width: @largestMobileScreen) {
    left: 0;
    right: 0;
  }
  .snackbar-message {
    font-size: 15px;
  }
  .ui.button {
    margin-left: 20px;
    white-space: nowrap;
  }
}