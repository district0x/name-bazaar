/*******************************
     User Global Variables
*******************************/
@importGoogleFonts: false;
@fontPath: '../fonts';

@brown: #2e1f37;
@green: #65e70e;
@lightGreen: #66fa03;
@darkGreen: #66cc00;
@pink: #ff0090;
@purple: #9d0adb;
