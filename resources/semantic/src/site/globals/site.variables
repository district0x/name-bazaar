@headerFontWeight: 300;
@minAppHeight: 1200px;
@sidebarWidth: 190px;
@segmentGutter: 33px;
@segmentGutterMobile: 20px;
@segmentBorderRadius: 10px;
@segmentBoxShadow: 2px 4px 4px 2px rgba(0,0,0,.02);
@h1: 22px;
@h5: 12px;
@h6: 9px;
@headerBottomMargin: 25px;
//@solidInternalBorderColor: fade(@lightBrown, 15);
@borderColor: fade(@lightBrown, 15);
@focusedFormMutedBorderColor: @borderColor;
@internalBorderColor: @borderColor;
@inputBorderColor: fade(@lightBrown, 30);
@inputBorder: 1px solid @inputBorderColor;
@focusedFormBorderColor: @brown;
@inputPlaceholderColor: @grey;

@appBarHeight: 45px;
@transactionLogWidth: 300px;
@transactionLogHeight: 424px;


@transactionSuccessColor: #5edb0b;
